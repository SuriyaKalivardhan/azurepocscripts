{
	"location": "eastus2euap",
	"properties": {
		"sku": "Standard",
		"containers": [
			{
				"name": "inferencer",
				"properties": {
					"image": "docker.io/suriyakalivardhan/simpleinferencer:v1",
					"ports": [
						{
							"protocol": "TCP",
							"port": 5001
						}
					],
					"resources": {
						"requests": {
							"memoryInGB": 1.0,
							"cpu": 2.0
						}
					}
				}
			},
            {
				"name": "server",
				"properties": {
					"image": "docker.io/suriyakalivardhan/simpleserver:v1",
					"ports": [
						{
							"protocol": "TCP",
							"port": 6001
						}
					],
					"resources": {
						"requests": {
							"memoryInGB": 1.0,
							"cpu": 1.0
						}
					}
				}
			}
		],
		"restartPolicy": "Always",
		"shutdownGracePeriod": "PT1H",
		"ipAddress": {
			"ports": [
				{
					"protocol": "TCP",
					"port": 5001
				},
                {
					"protocol": "TCP",
					"port": 6001
				}
			],
			"type": "Public",
			"autoGeneratedDomainNameLabelScope": "Unsecure"
		},
		"timeToLive": "PT2H",
		"osType": "Linux"
	}
}